{
  "extends": [
    "config:base",
    "group:all",
    ":automergeDisabled",
    ":combinePatchMinorReleases",
    ":disablePeerDependencies",
    ":ignoreUnstable",
    ":labels(dependencies,bot)",
    ":maintainLockFilesDisabled",
    ":preserveSemverRanges",
    ":prHourlyLimit4",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":separateMajorReleases",
    ":preserveSemverRanges",
    ":timezone(Europe/Warsaw)"
  ],
  "schedule": [
    "before 7am on Friday"
  ],
  "stabilityDays": 7,
  "reviewersFromCodeOwners": true,
  "docker": {
    "managerBranchPrefix": "docker-",
    "commitMessagePrefix": "[DOCKER]"
  },
  "js": {
    "managerBranchPrefix": "js-",
    "commitMessagePrefix": "[JS]"
  },
  "python": {
    "managerBranchPrefix": "python-",
    "commitMessagePrefix": "[PYTHON]"
  },
  "packageRules": [
    {
      "managers": ["npm"],
      "stabilityDays": 14,
      "schedule": [
        "every 2 weeks on Friday before 5am"
      ]
    },
    {
      "managers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies"
    },
    {
      "managers": ["docker-compose"],
      "matchPackageNames": ["postgres"],
      "enabled": false
    }
  ]
}
