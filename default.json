{
  "extends": [
    "config:base",
    "group:all",
    ":automergeDisabled",
    ":combinePatchMinorReleases",
    ":disablePeerDependencies",
    ":ignoreUnstable",
    ":labels(dependencies,bot)",
    ":maintainLockFilesWeekly",
    ":preserveSemverRanges",
    ":prHourlyLimit4",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":separateMajorReleases",
    ":preserveSemverRanges",
    ":timezone(Europe/Warsaw)"
  ],
  "stabilityDays": 14,
  "internalChecksFilter": "strict",
  "schedule": ["every 2 weeks on Friday before 5am"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["every 2 weeks on Monday before 5am"]
  },
  "reviewersFromCodeOwners": true,
  "docker": {
    "managerBranchPrefix": "docker-",
    "commitMessagePrefix": "chore(deps): [DOCKER]"
  },
  "js": {
    "managerBranchPrefix": "js-",
    "commitMessagePrefix": "chore(deps): [JS]"
  },
  "python": {
    "managerBranchPrefix": "python-",
    "commitMessagePrefix": "chore(deps): [PYTHON]"
  },
  "packageRules": [
    {
      "managers": ["github-actions"],
      "managerBranchPrefix": "gha-",
      "commitMessagePrefix": "chore(deps): [GHA]"
    },
    {
      "managers": ["npm"],
      "lockFileMaintenance": {
        "schedule": ["every 2 months on Monday before 5am"]
      }
    },
    {
      "managers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies"
    },
    {
      "managers": ["docker-compose"],
      "matchPackageNames": ["postgres"],
      "enabled": false
    }
  ]
}
